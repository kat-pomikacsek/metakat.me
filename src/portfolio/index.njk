---
title: Portfolio
description: Current work and case studies
robots: "noindex, nofollow"
layout: default
---

{% for caseStudy in casestudies %}
    {% if loop.last %}
        <section class="pt-16" >
            <div class="py-8 container mx-auto max-w-overview">
                <div class="mx-8 2xl:mx-0 flex flex-col-reverse lg:flex-none lg:grid lg:grid-cols-2 items-center">
                    <div class="teaser-text mt-1/10 mx-8 lg:mx-36 text-center lg:text-left lg:justify-self-end">
                        <a href="/portfolio/{{ caseStudy.slug }}" class="text-current hover:text-{{ caseStudy.theme }}-dark block lg:max-w-xs ">
                            <span class="casestudy-date m-0 text-base md:text-xl">{% renderCaseStudyDate caseStudy %}</span>
                            <h2 class="my-0 text-3xl md:text:4xl xl:text-6xl">{{caseStudy.title}}</h2>
                        </a>
                        <div class="mt-2">
                            {% renderOrganizations caseStudy %}
                            {% if caseStudy.isCaseStudy%}
                            <span class="badge badge--casestudy">
                            Case study
                            </span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="teaser-image relative mt-6 lg:mt:0 lg:justify-center pt-4 {% if caseStudy.theme %}bg-split-{{ caseStudy.theme }}-white {% endif %}">
                        <a href="/portfolio/{{ caseStudy.slug }}" class="text-current block">
                            {# {% renderTeaserImage caseStudy.featuredImage, caseStudy.teaserImageRight %} #}
                            {% renderImage caseStudy.featuredImage %}
                        </a>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
{% endfor %}


