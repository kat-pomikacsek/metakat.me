                    <div class="teaser-image lg:justify-center pb-8 split-white-transparent {% if caseStudy.theme %}bg-split-white-{{ caseStudy.theme }} {% endif %}">
                        <a href="/portfolio/{{ caseStudy.slug }}" class="text-current block">
                            <!-- teaser image -->
                            {% renderImage caseStudy.featuredImage %}
                        </a>
                    </div>
                    <div class="teaser-text mt-1/10 mx-8 lg:mx-36 text-center lg:text-left lg:justify-self-start">
