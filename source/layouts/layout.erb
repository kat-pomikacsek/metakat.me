<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Bitter:400,700|Open+Sans:400,600|Source+Sans+Pro:200,300,400,600,700">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Katalin Pomikacsek" %></title>

    <%= stylesheet_link_tag "styles" %>
    
  </head>

  <body class="<%= page_classes %>">
    <%= partial "partials/header" %>

    <div class="site group content-container" role="main">
      <%= partial "partials/tagline" %>
      
      <%= yield %>
    </div>
    <%= partial "partials/footer" %>

    <%= javascript_include_tag  "all" %>
  </body>
</html>